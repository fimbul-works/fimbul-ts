{
  "name": "@fimbul-works/fimbul",
  "description": "Fimbul is a TypeScript library for elegant dependency resolution in computation graphs - powerful, minimal, and blazingly fast.",
  "version": "1.2.1",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": "FimbulWorks <contact@fimbul.works>",
  "homepage": "https://github.com/fimbul-works/fimbul-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fimbul-works/fimbul-ts.git"
  },
  "bugs": {
    "url": "https://github.com/fimbul-works/fimbul-ts/issues"
  },
  "keywords": [
    "compute",
    "computation",
    "dag",
    "dependencies",
    "dependency",
    "dependency-management",
    "dependency-resolution",
    "dependency-resolver",
    "directed-graph",
    "functional",
    "generation",
    "generative",
    "graph",
    "hierarchy",
    "hierarchial",
    "procedural-generation",
    "procgen",
    "tree"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./async": {
      "types": "./dist/esm/async.d.ts",
      "import": "./dist/esm/async.js",
      "require": "./dist/cjs/async.js"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "format": "npx biome format --write src",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
